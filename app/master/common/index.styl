// Responsive map
$devmode-colors      =    tomato    hotpink     gold    lightgreen deepskyblue chocolate
//                     ┌────┴────┐┌────┴────┐┌────┴────┐┌────┴────┐┌────┴────┐┌────┴────┐
rupture.scale        =  0        25em      37.5em      50em      65.625em    87.5em
//                     └────┬────┘└────┬────┘└────┬────┘└────┬────┘└────┬────┘└────┬────┘
rupture.scale-names  =    'mini'     'small'    'medium'   'normal'    'large'   'extra'
//                     ┌────┴────┐┌────┴────┐┌────┴────┐┌────┴────┐     └────┐┌────┘
//                     │       mobile       ││       tablet       │        desktop
//                     └ portrait landscape ┘└ portrait landscape ┘

@require 'color'        // Color variables generator
@require 'font'         // Font variables generator
@require 'sticky/view'  // Enable sticky elements' style.


// Enable colors for developer mode.
html.dev-mode body
	&:before
		z-index     : -1
		content     : 'mini'
		position    : fixed
		display     : block
		margin      : 0 auto
		font-size   : 10em
		font-weight : 700
		width       : 100%
		height      : 1em
		line-height : 1em
		text-align  : center
		bottom      : 0

	for name, i in rupture.scale-names
		+at(name)
			background-color: $devmode-colors[i]
			&:before
				content          : name
				color            : $devmode-colors[i]
				background-color : darken(transparentify($devmode-colors[i],0.1), 50%)


$background-hamburguer($color)
	background:linear-gradient(
		to bottom,
		$color, $color 20%,
		transparent 20%, transparent 40%,
		$color 40%, $color 60%,
		transparent 60%, transparent 80%,
		$color 80%, $color 100%
	)
