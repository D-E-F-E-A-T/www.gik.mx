// http://css-tricks.com/examples/ShapesOfCSS/
$logo-bg($height, $bg, $image)

	$width = ($height / 0.9)

	display    : block
	overflow   : hidden
	position   : relative
	width      : $width
	height     : $height
	background : transparent

	&:after
	&:before
		display  : block
		content  : " "
		overflow : hidden
		position : absolute
		top      : 0
		left     : 0

	&:after
		z-index             : 1
		width               : $width
		height              : $height
		background-image    : $image
		background-size     : ($width * 0.9) auto
		background-repeat   : no-repeat
		background-position : ($width * 0.05) $height - ($height - ($height * 0.1))

	&:before
		z-index                    : 1
		width                      : 75%
		height                     : 100%
		margin-left                : -11%
		margin-top                 : -4%
		border-bottom-right-radius : 45%
		border-bottom-left-radius  : 45%
		bottom                     : 0
		background-color           : $bg