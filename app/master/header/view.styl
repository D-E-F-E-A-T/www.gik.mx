@import 'common/logo-bg/view'
@import 'common/social-bar/view'

// @import '../common/social-bar/'

$header-size   = 3rem

$header-font =
	{$font-secondary-bold}
	font-size       : 1rem
	line-height     : $header-size
	text-transform  : uppercase
	text-decoration : none

#header-cover
	position   : relative
	overflow   : hidden
	width      : 100%
	height     : 500px
	min-height : 500px
	text-align : center
	background: url('/static/img/gik-intro.gif') no-repeat center center
	background-size: 100% auto

	+from-width('normal')
		background:none

	video
		display:none

		+from-width('normal')
			display : block
			height  : auto !important
			width   : 100% !important
			margin  : 0
			padding : 0

nav#header-menu
	// required for position fixed when in 'sticky mode'
	position        : relative
	width           : 100%
	display         : flex
	flex-flow       : row nowrap
	justify-content : space-between

	.logo
		display   : block
		order     : 1
		flex-grow : 0
		$logo-bg($header-size, $color-primary, url('/static/img/gik-logo.svg'))

	.menu
		// As a flex-child
		order     : 2
		flex-grow : 1
		// As a flex-parent
		display         : flex
		flex-flow       : row nowrap
		justify-content : flex-end

		&:before // Bar behind menu that fills 100% width
			z-index    : -1
			background : $color-primary
			height     : $header-size
			content    : ' '
			display    : block
			position   : absolute
			width      : 100%
			top        : 0
			left       : 0
			right      : 0
			bottom     : 0

		.menu-button
		.menu-content
			position : relative
			display  : block

		.menu-button
			+from-width('normal')
				display:none

		label.menu-button
			text-align       : center
			overflow         : hidden
			text-indent      : -22em
			height           : $header-size
			line-height      : $header-size
			width            : $header-size

			&:after
				display  : block
				position : absolute
				content  : ""
				width    : 50%
				height   : 50%
				top      : 25%
				left     : 25%
				$background-hamburguer($color-light)

		input.menu-button
			position : absolute
			opacity  : 0

			&:checked ~ label.menu-button
				background: $color-primary-darker

			&:checked ~ .menu-content
				width      : auto
				overflow   : visible

		.menu-content
			display         : flex
			flex-grow       : 0
			flex-flow       : column nowrap
			justify-content : space-between
			// off-canvas
			width      : 0
			overflow   : hidden

			+from-width('normal')
				flex-grow : 1
				flex-flow : row nowrap
				// off-canvas
				width     : auto
				overflow  : visible

			.menu-social
				order                     : 2
				flex-grow                 : 0
				background-color          : $color-primary
				border-bottom             : 0.5rem solid $color-primary
				border-bottom-left-radius : 1.4rem
				$social-bar($header-size, 0.5rem)

				+from-width('normal')
					border: none
					background-color: transparent

			.menu-items
				order     : 1
				flex-grow : 0
				display   : flex
				flex-flow : column nowrap
				margin    : 0
				padding   : 0

				+from-width('normal')
					flex-grow : 1
					flex-flow : row nowrap

				+from-width('large')
					flex-grow : 0

				li, a
					position    : relative
					height      : $header-size
					line-height : $header-size

				li
					display          : block
					flex-grow        : 0
					background-color : $color-primary

					+from-width('normal')
						flex-grow: 1

				a
					{$header-font}
					z-index : 9
					display : block
					padding : 0 1rem
					margin  : 0 0
					cursor  : pointer
					color   : $color-light

					+from-width('normal')
						display : inline-block
						margin  : 0 1rem

					&:before
						z-index          : -1
						position         : absolute
						display          : block
						content          : " "
						width            : 0.25rem
						height           : 100%
						right            : 0
						top              : 0
						background-color : transparent
						transition       : all 0.75s ease-in-out-back

						+from-width('normal')
							height : 0.25rem
							width  : 100%
							top    : 0
							left   : 0
							right  : auto

					&:hover
						color: $color-light-brightest

						&:before // A line that serves as indicator of hovering.
							background-color : $color-secondary
							width: 100%

							+from-width('normal')
								height: 100%
