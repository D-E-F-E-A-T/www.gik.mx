.box-foo
	max-width : 1024px
	margin: 0 auto

*
	box-sizing : border-box

.col1, .col2, .col3, .col4, .col5, .col6
	border: 4px solid white
	position : relative
	overflow: hidden


.col1:hover .layer, .col2:hover .layer, .col3:hover .layer, .col4:hover .layer, .col5:hover .layer, .col6:hover .layer
	transition: all .3s ease
	height : 100%

.layer
	transition: all .3s ease;
	position : absolute
	bottom : 0
	height : 0
	width : 100%
	z-index : 10
	font-family : 'Roboto' !important
	p
		text-align : left
		font-size : 1em
		padding : 1em 1em
		line-height : 1
		color : white
		font-weight: 900
		text-shadow : 2px 2px rgba(0, 0, 0, 0.5)


.img-box

	text-align : center !important
	margin-top : 1vw
	img

		width : 100%

.text
	bottom: 0;
	font-size : 2vw
	right : 0
	text-align : center
	top: 0;
	margin-bottom: auto;
	margin-top: auto;
	font-family : 'ubuntu'
	p
		color: white;
		font-size: 5vw;
		font-weight: 900;
		line-height: normal;
		margin-right: 0;
		margin-top: 14vw;
		margin-bottom : 0
		text-align: center;

		+from-width('s')
			font-size: 5.5vw
			margin-top: 14vw
		+from-width('m')
			font-size: 4vw
			margin-top: 7vw

		+from-width('l')
			font-size: 4vw
			margin-top: 4vw

		+from-width('xl')
			font-size: 2vw
			margin-top: 4vw

#main
	position : relative
	.content
		position : absolute
		top : -12em
		+from-width('l')
			top : 0
			position : relative

		#servicios
			margin : 0 auto
			max-width : 1024px

			.col1
				span(12/12)
				background : #eb5757
				+from-width('l')
					span(6/12)

				.layer
					background-color rgba(#eb5757, 0.8)

				.img-box
					span(6/12)

				.text
					span(6/12)
					p
						margin-top : 3vw

			.col2
				span(12/12)
				background-color : #54cad7
				+from-width('l')
					span(6/12)
				.layer
					background-color rgba(#54cad7, 0.8)
				.img-box
					span(6/12)


				.text
					span(6/12)


			.col3
				span(6/12)
				background-color : #bef35b
				text-align : center
				+from-width('l')
					span(3/12)
				.layer
					background-color rgba(#bef35b, 0.8)

				.img-box
					span(8/12)
					margin-top : 0.54em
					+from-width('l')
						span(12/12)
						margin-top : 0.5em
					img
						+from-width('m')
							width : 70%



				.text
					span(4/12)
					bottom : 0
					right : 0
					+from-width('l')
						span(12/12)
					p
						font-size: 3vw
						top : 13px
						margin-top : 14vw
						+from-width('m')
							margin-top : 6vw
						+from-width('l')
							font-size: 1.33vw
							top : 13px
							margin-top : -17px

			.col4
				span(6/12)
				background-color :  #f48732
				text-align : center
				+from-width('l')
					span(3/12)

				.layer
					background-color rgba(#f48732, 0.8)

				.img-box
					span(8/12)
					margin-top : 1em
					+from-width('l')
						span(12/12)
						margin-top : 0.5em
					+from-width('xl')
						img
							+from-width('m')
								width : 70%

				.text
					span(4/12)
					bottom : 0
					right : 0
					+from-width('l')
						span(12/12)
					p
						font-size: 3vw
						top : 13px
						margin-top : 14vw
						+from-width('m')
							margin-top : 6vw
						+from-width('l')
							font-size: 1.88vw
							top : 13px
							margin-top : -16px
						+from-width('xl')
							font-size: 1.33vw
							top : 13px
							margin-top : -10px

			.col5
				span(12/12)
				background-color : #8b71fb
				+from-width('l')
					span(6/12)
				.layer
					background-color rgba(#8b71fb, 0.8)

				.img-box
					span(6/12)

				.text
					span(6/12)
					p
						+from-width('l')
							margin-top : 3vw

			.col6
				span(12/12)
				background-color : #eb5757

				.layer
					background-color rgba(#eb5757, 0.8)
				.img-box
					span(6/12)

				.text
					span(6/12)
					p
						margin-top : 2vw
						+from-width('s')
							margin-top : 2vw

		#blog
			margin : 0 auto
			.form
				span(12/12)
				background : #4d4d4d
				height : auto
				border: 0
				max-width : 1024
				.label
					span(12/12)
					p
						font-size : 2em
						text-align : center
						font-weight : 900
						color : white


				.contener
					span(12/12)
					.box-input
						span(12/12)
						text-align : center
						+from-width("l")
							span(4/12)
						.contener1
							span(12/12)
							margin-bottom : 1em
							text-align : center
							width : 100%
							input
								width : 95%
								padding : 0.5em 2.5em
								background-image: url(http://rexkirby.com/kirbyandson/images/name.svg)
								background-repeat : no-repeat
								background-size: 30px 30px
								border: 3px solid rgba(0,0,0,0)


						.contener2
							span(12/12)
							margin-bottom : 1em
							text-align : center
							width : 100%
							input
								width : 95%
								padding : 0.5em 2.5em
								background-image: url(http://rexkirby.com/kirbyandson/images/email.svg)
								background-repeat : no-repeat
								background-size: 30px 30px
								border: 3px solid rgba(0,0,0,0)


					.box-message
						span(12/12)
						+from-width("l")
							span(5/12)
						margin-bottom : 1em
						.contener3
							span(12/12)
							text-align : center
							input
								height : 11.2vh
								border: 3px solid rgba(0,0,0,0)
								width:95%


					.box-3th
						span(12/12)

						+from-width("l")
							span(3/12)
						.box-submit
							span(12/12)
							text-align : center
							input
								width : 95%
								padding : 0.5em
								border: 4px solid rgb(255,255,255)
								background : #eb5757
								hover-color: #54cad7
								transition: all .3s ease
								color : #fff
								font-weight : 900
								font-size : 1.5em
						.box-icon
							span(12/12)
							margin-top : 0.5em
							.icon
								span(1/5)
								text-align : center
								img
									width : 40%
									hover-pop : 2.5 7deg true
									transition: all .3s ease
									+from-width("m")
										width : 40%
									+from-width("n")
										width : 40%
									+from-width("l")
										width : 60%
									+from-width("xl")
										width : 40%





