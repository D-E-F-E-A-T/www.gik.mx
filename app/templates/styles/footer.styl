&
	position   : relative
	background : gris
	overflow   : hidden
	bottom 	   : -100px
	border-top: solid 4px turquesa
	height     : 307px
	

	h1
		color          : turquesa 
		text-transform : uppercase
		font-size      : 20px

	h2,h3,h4,p
		color        : blanco
	h2
		font-size    : 16px

	h3
		font-size    : 14px
		text-transform : uppercase
		

	p
		font-size       : 11px
		text-align      : center
		margin          : 0px 20px 0 20px
		padding-bottom  : 5px

	.borde
		border-bottom: solid 4px turquesa
		height       : 15px
	
	.margen
		margin-top   : 3em
		text-align   : center

	.borde-fecha
		border       : solid 2px blanco
		margin-top   : 10px

	.borde-post	
		border-bottom: 2px solid rgba(0, 0, 0, .5);
		margin-top   : 20px

	table 
		width: 100%
		border-spacing: 5px
		border: 0
		background: gris

	th,tr 
		border: 2px solid blanco
		background: gris
		color: blanco

@media(max-width: 480px) {
	
	height     : 400px
}
		